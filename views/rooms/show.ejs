    <script src="/simplewebrtc/script.js" charset="utf-8"></script>
  </head>
  <body>

  <% include ../partials/navbar %>
  <div class="container fadeIn">

    <!-- drawing board -->
    <div class="drawing-wrapper">
      <canvas id="drawing"></canvas>
      <!-- controls for drawing canvas -->
      <div class="controls">
        Size: <select id="selWidth">
          <option value="1">1</option>
          <option value="3">2</option>
          <option value="5" selected="selected">3</option>
          <option value="7">4</option>
          <option value="9">5</option>
        </select>
        Color: <select id="selColor">
          <option value="black" selected="selected">black</option>
          <option value="red">red</option>
          <option value="#F90">orange</option>
          <option value="#FF0">yellow</option>
          <option value="#33CC33">green</option>
          <option value="#00B2FF">blue</option>
          <option value="#CC00FF">purple</option>
          <option value="#F9C">pink</option>
          <option value="#963">brown</option>
          <option value="gray">gray</option>
        </select>
        <button onclick="javascript:clearArea();return false;">Clear</button>
     </div>

    </div>

    <div class="side-panel">
      <br>Online <img class="blink" src="http://blenderartists.org/design/baorg2012dark/images/statusicon/user-online.png" />
      <h2 id="room-name"><%= room.name %></h2>
      <p id="desc"><span style="text-transform: uppercase; letter-spacing: 2px; font-family: 'Brandon Med'; color: #11BAEE;">Description:</span><br><%= room.description %><p>
      <span style="font-style: italic; color: #999;">Enter name to start chatting:</span><br>
      <input class="usernameInput" maxlength="15" value="Anon">
      <video id="localVideo"></video>
      <br><strong>Other Users</strong><br>
      <div id="remoteVideos"></div>
    </div>

    <div id="chatbox">
      <div class="chatArea">
        <div class="messages"></div>
      </div>
      <input class="inputMessage" placeholder="Type here..."/>
    </div>

  </div>
<% include ../partials/footer %>


